{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "rules": {
    "no-restricted-syntax": [
      "error",
      {
        "selector": "TSEnumDeclaration",
        "message": "Don't declare enums"
      }
    ],
    "@next/next/no-html-link-for-pages": ["error", "./apps/client/pages"]
  },
  "settings": {
    "next": {
      "rootDir": "./apps/client/"
    }
  }
}
